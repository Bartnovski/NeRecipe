<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NeRecipe" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brown_400</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/orange_50</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brown_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimary</item>
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->

    </style>


    <style name="autoscroll">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:scrollHorizontally">true</item>
    </style>
    
    <style name="Drawer">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:layout_marginStart">14dp</item>
        <item name="android:textColor">@color/brown_400</item>
        
    </style>

    <style name="Widget.AppTheme.Icons" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconTint">@color/color_button_tint</item>
        <item name="android:textColor"> #808080</item>

    </style>



</resources>